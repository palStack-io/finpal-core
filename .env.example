# ================================================================
# DollarDollar Backend Configuration
# ================================================================

# Database Configuration
DB_USER=postgres
DB_PASSWORD=your_secure_postgres_password
DB_NAME=dollardollar

# Application Settings
SECRET_KEY=your_very_long_random_secret_key_change_this_in_production
DISABLE_SIGNUPS=False
DEBUG=False
LOG_LEVEL=INFO
DEVELOPMENT_MODE=False

# Email Configuration (Optional - for password reset)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=your_email@gmail.com

# ================================================================
# OIDC Single Sign-On (Optional)
# ================================================================
OIDC_ENABLED=False  # Set to True to enable OIDC authentication
OIDC_CLIENT_ID=dollardollar
OIDC_CLIENT_SECRET=your_oidc_client_secret
OIDC_ISSUER=https://auth.domain.com
OIDC_LOGOUT_URI=https://auth.domain.com/logout
APP_URL=https://dollardollar.domain.com

# Optional: Override default OIDC settings
# OIDC_PROVIDER_NAME=Authelia    # Display name for login button
# OIDC_DISCOVERY_URL=https://auth.domain.com/.well-known/openid-configuration
LOCAL_LOGIN_DISABLE=False  # Set to True to disable local login when OIDC is enabled

# ================================================================
# Feature Flags
# ================================================================
SIMPLEFIN_ENABLED=True  # Enable SimpleFin bank account sync
INVESTMENT_TRACKING_ENABLED=True  # Enable investment portfolio tracking

# ================================================================
# Notes:
# - User preferences (currency, timezone, notifications) are set
#   during onboarding and stored in the database per user
# - Default currency and timezone are no longer in .env
# ================================================================

