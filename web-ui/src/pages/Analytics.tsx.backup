/**
 * Analytics Page
 * Advanced charts, trends, and financial insights
 */

import React, { useState, useEffect } from 'react';
import { Navigation } from '../components/Navigation';
import { analyticsService, type CategoryBreakdown } from '../services/analyticsService';
import { useAuthStore } from '../store/authStore';
import { getBranding } from '../config/branding';
import {
  TrendingUp,
  TrendingDown,
  DollarSign,
  PieChart,
  BarChart3,
  Calendar,
  Download,
  ArrowUpRight,
  ArrowDownRight,
} from 'lucide-react';

export const Analytics: React.FC = () => {
  const { user } = useAuthStore();
  const branding = getBranding(user?.default_currency_code);

  const [loading, setLoading] = useState(true);
  const [timeRange, setTimeRange] = useState<'week' | 'month' | 'year'>('month');
  const [topCategories, setTopCategories] = useState<CategoryBreakdown[]>([]);
  const [stats, setStats] = useState({
    totalIncome: 0,
    totalExpenses: 0,
    netBalance: 0,
    avgDailySpending: 0,
  });

  useEffect(() => {
    loadAnalytics();
  }, [timeRange]);

  const loadAnalytics = async () => {
    try {
      setLoading(true);
      const summary = await analyticsService.getFinancialSummary();
      const categories = await analyticsService.getTopSpendingCategories(5);

      setTopCategories(categories);
      setStats({
        totalIncome: summary.monthly_spending * 1.5,
        totalExpenses: summary.monthly_spending,
        netBalance: summary.net_balance,
        avgDailySpending: summary.monthly_spending / 30,
      });
    } catch (error) {
      console.error('Failed to load analytics:', error);
    } finally {
      setLoading(false);
    }
  };

  const handleExport = () => {
    alert('Export functionality not yet implemented');
  };

  if (loading) {
    return (
      <div style={{ display: 'flex', minHeight: '100vh', background: '#0f172a' }}>
        <Navigation />
        <div style={{
          flex: 1,
          marginLeft: '240px',
          display: 'flex',
          alignItems: 'center',
          justifyContent: 'center'
